.form-login
  %h4 Login
  = form_for @customer_session, :url => {:action => "create"} do |f|
    = render "shared/error_messages", :target => @customer_session
    .form
      .form-group
        = f.text_field :email, class: "form-control input-sm chat-input", placeholder: 'Email'
      .form-group
        = f.password_field :password, class: "form-control input-sm chat-input", placeholder: 'Password'
      .form-group
        = f.check_box :remember_me
        = f.label :remember_me, "Stay logged in"
      .form-group
        = f.submit "Sign In", class: "btn btn-lg btn-block btn-signin"
